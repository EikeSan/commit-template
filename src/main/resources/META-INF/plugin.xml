<idea-plugin>
    <id>atom.plugins.commit-template</id>
    <name>Audora Commit Template</name>
    <vendor email="support@yourcompany.com" url="http://audora.com.br/img/logo.png">Audora</vendor>

    <description><![CDATA[
    Plugin com template para commits.<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="Commit.Button" class="atom.plugins.commit.CreateCommitAction"
                text="Create commit message"
                description="Create commit message"
                icon="PluginIcons.LOAD">
            <add-to-group group-id="Vcs.MessageActionGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>